@model ProdutoModel
@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<div>
    <form aps-controller="Produto" asp-action="Criar" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label for="Descrição" class="form-label">Descrição</label>
            <input type="text" asp-for="Descricao" class="form-control" id="descricao" placeholder="Entre com a Descrição do produto" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div>
            <label for="codigoDeBarras" class="form-label">Código de Barras</label>
            <input type="date" asp-for="CodigoDeBarras" class="form-control" id="codigoBarras" placeholder="Digite o Código de Barras" />
            <span asp-validation-for="CodigoDeBarras" class="text-danger"></span>
        </div>
        <div>
            <label for="dataDeValidade" class="form-label">Data de Validade</label>
            <input type="text" asp-for="DataValidade" class="form-control" id="DataValidade" placeholder="Data De Validade" />
            <span asp-validation-for="DataValidade" class="text-danger"></span>
        </div>
        <div>
            <label for="quantidade" class="form-label">Quantidade</label>
            <input type="text" asp-for="Quantidade" class="form-control" id="descricao" placeholder="Quantidade" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div>
            <label for="valorUnitario" class="form-label">Valor Unitario</label>
            <input type="text" asp-for="Valor" class="form-control" id="valor" placeholder="R$" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </form>
</div>